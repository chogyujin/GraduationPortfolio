<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.DriverAssistSystem">
<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity android:name="com.DriverAssistSystem.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.DriverAssistSystem.main.ShowingActivity"/>
        <activity android:name="com.DriverAssistSystem.main.SettingActivity"/>
        <activity android:name="com.DriverAssistSystem.main.SignInActivity"/>
        <activity android:name="com.DriverAssistSystem.main.SignUpActivity"/>
        <activity
            android:name="com.DriverAssistSystem.main.LogDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity
            android:name="com.DriverAssistSystem.main.RiskDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog"/>
        <activity
            android:name="com.DriverAssistSystem.main.SleepDialogActivity"
            android:theme="@style/Theme.AppCompat.Dialog"/>
    </application>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
</manifest>